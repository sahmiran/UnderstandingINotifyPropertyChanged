<Window x:Class="UnderstandingINotifyPropertyChanged.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnderstandingINotifyPropertyChanged"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Height="30" Width="200" Text="{Binding Path=FirstName, Mode=TwoWay}" Margin="0,50,0,0"></TextBox>
            <TextBox Height="30" Width="200" Text="{Binding Path=LastName, Mode=TwoWay}" Margin="0,20,0,0"></TextBox>
            <TextBox Height="30" Width="200" Text="{Binding Path=FullName, Mode=TwoWay}" Margin="0,50,0,0"></TextBox>


        </StackPanel>
        
    </Grid>
</Window>
